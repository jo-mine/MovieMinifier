{
	"workspaces": [
		"apps/*",
		"packages/*"
	],
	"scripts": {
		"dev": "bun run --workspaces dev",
		"dev:backend": "bun run --filter ./apps/backend dev",
		"dev:frontend": "bun run --filter ./apps/frontend dev",
		"build": "bun run --workspaces build"
	},
	"dependencies": {
		"@apps/frontend": "workspace:*",
		"hono": "^4.11.7"
	},
	"devDependencies": {
		"@biomejs/biome": "2.3.13",
		"@types/bun": "latest"
	}
}
